<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/selectMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_map" />
        
        <Button
            android:id="@+id/addMission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_mission" />
        
        <Button
            android:id="@+id/delMission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/del_mission" />
        
         <Button
            android:id="@+id/transferLTL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transfer_ltl" />
         
         <Button
            android:id="@+id/uploadLTL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_ltl" />

       
    

    <CheckBox
        android:id="@+id/wayPoint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingRight="20dp" />

    <CheckBox
        android:id="@+id/wayPoint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:paddingRight="20dp" />
    
     <CheckBox
        android:id="@+id/wayPoint3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:paddingRight="20dp" />

    <CheckBox
        android:id="@+id/wayPoint4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:paddingRight="20dp" />
    
     <CheckBox
        android:id="@+id/wayPoint5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:paddingRight="20dp"  />

    <CheckBox
        android:id="@+id/wayPoint6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6" 
        android:paddingRight="20dp"/>
    
     <CheckBox
        android:id="@+id/wayPoint7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:paddingRight="20dp" />

    <CheckBox
        android:id="@+id/wayPoint8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:paddingRight="20dp" />
    
     <CheckBox
        android:id="@+id/wayPoint9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:paddingRight="20dp" />

    <CheckBox
        android:id="@+id/wayPoint10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:paddingRight="20dp" />
    
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
    
    <TextView
        android:id="@+id/ltlTextView"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="hello" />

    <com.CPS.test2.DrawView
        android:id="@+id/draw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>